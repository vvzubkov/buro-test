extends extends/_layout
block title
  title Buro / Documents

block header

block content
  main.container-fluid
    .row
      .col-xs-12.col-sm-3.sidebar
        nav.navbar
          .navbar-header
            button(type='button' data-toggle='collapse' data-target='#main-navbar' aria-expanded='false').navbar-toggle.collapsed
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            .logo_wrap
              a.brand-link(href='#')
                img(src='/img/logo.png').img-responsive
            .logo_sign Дизайн. Иновации. Строительство.
        #main-navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='#') Мои объекты
            li.active
              a(href='/documents.html') Документы
            li
              a(href='/messages.html') Сообщения
            li
              a(href='#') Настройки
        .sidebar_footer
          .callback_block
            .callback_block_title свяжитесь с нами
            .callback_block_phone +7 (495) 444-55-66
          .exit_block
            button(type='button').btn.btn-exit Выход

      .col-xs-12.col-sm-9.col-xs-offset-0.col-sm-offset-3.content
        .content_title_wrapper
          .row
            .col-xs-12.col-sm-8.col-md-9.text-left
              .content_title
                span
                  img(src='/img/icon-arrow-right.png').icon_title.media-object
                span
                  h1 Документы

            .col-xs-12.col-sm-4.col-md-3.text-right
              a(href='#').btn-back_to_site
                img(src='/img/icon-logout.png')
                span назад на сайт

        .content_container
          .table_wrapper.table-responsive
            table.table
              thead
                tr
                  th #
                  th Название файла
                  th Автор
                  th Дата загрузки
                  th
              tbody
                tr
                  th(scope="row") 1
                  td Договор.doc
                  td Вы
                  td 02 января 2015 в 01:45
                  td
                    button(type='button').delete_btn
                      span.icon_delete.glyphicon.glyphicon-trash
                    button(type='button').edit_btn
                      span.icon_edit.glyphicon.glyphicon-pencil
                tr
                  th(scope="row") 2
                  td квитанция.pdf
                  td Вы
                  td @24 января 2015 в 17:00
                  td
                    button(type='button').delete_btn
                      span.icon_delete.glyphicon.glyphicon-trash
                    button(type='button').edit_btn
                      span.icon_edit.glyphicon.glyphicon-pencil
                tr
                  th(scope="row") 3
                  td шаблон_договора.pdf
                  td Администратор
                  td 10 февраля 2015 в 16:42
                  td

          .upload_zone
            form(action="/upload.php")
              #dropZone
                span.glyphicon.glyphicon-upload
                span Перетащите сюда файл для загрузки или <u>выберите его</u>

